include(${CMAKE_CURRENT_LIST_DIR}/prt4houdini_codecTargets.cmake)

set(PRT4HOUDINI_CODEC_PROJECT prt4houdini_codec)
find_path(PRT4HOUDINI_CODEC_INSTALL_PATH NAMES "cmake/${PRT4HOUDINI_CODEC_PROJECT}Config.cmake" PATHS ${CMAKE_CURRENT_LIST_DIR}/..)

set(PRT4HOUDINI_CODEC_INCLUDE_PATH ${PRT4HOUDINI_CODEC_INSTALL_PATH}/include)

if(WIN32)
	set(LIBSUF ${CMAKE_IMPORT_LIBRARY_SUFFIX})
else()
	set(LIBSUF ${CMAKE_SHARED_LIBRARY_SUFFIX})
endif()

find_library(
	PRT4HOUDINI_CODEC_LINK_LIBRARY
	NAMES ${CMAKE_SHARED_LIBRARY_PREFIX}${PRT4HOUDINI_CODEC_PROJECT}${LIBSUF}
	PATHS ${PRT4HOUDINI_CODEC_INSTALL_PATH}/lib
)

set(PRT4HOUDINI_CODEC_EXT_LIBRARIES)
list(APPEND PRT4HOUDINI_CODEC_EXT_LIBRARIES "${PRT4HOUDINI_CODEC_INSTALL_PATH}/lib/${CMAKE_SHARED_LIBRARY_PREFIX}${PRT4HOUDINI_CODEC_PROJECT}${CMAKE_SHARED_LIBRARY_SUFFIX}")

include(FindPackageHandleStandardArgs)
find_package_handle_standard_args(${PRT4HOUDINI_CODEC_PROJECT} DEFAULT_MSG PRT4HOUDINI_CODEC_LINK_LIBRARY PRT4HOUDINI_CODEC_INCLUDE_PATH)
